<Window x:Class="HomeInvestor.Dlg.dlgNotes"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:editor="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
	Title="HomeInvestor.Dlg" Height="480" Width="640"
	WindowStartupLocation="CenterScreen"
	FontSize="16"
>
	<DockPanel LastChildFill="True">
		<Button Content="Сохранить" DockPanel.Dock="Bottom" Click="Button_Click"/>
		<editor:TextEditor x:Name="text"
			Padding="5"
			KeyUp="Text_KeyUp"
			Background="LightYellow"
			FontFamily="Consolas"
			FontSize="16"
			SyntaxHighlighting="C#">
		</editor:TextEditor>
	</DockPanel>
</Window>