	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Добавление нового актива, шаг 1" Height="150" Width="600"
	WindowStartupLocation="CenterScreen"
	FontSize="16"
>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Button Content="Акции" 	Grid.Column="0" Margin="10, 30" Click="Button_Stocks"/>
		<Button Content="Облигации" Grid.Column="1" Margin="10, 30" Click="Button_Bonds"/>
		<Button Content="ETF" 		Grid.Column="2" Margin="10, 30" Click="Button_Etf"/>
