	Title="Obligi" Height="300" Width="640"
    WindowStyle="None"
	Loaded="Window_Loaded"
	WindowStartupLocation="CenterScreen">
	<DockPanel LastChildFill="True">
		<TextBlock DockPanel.Dock="Bottom" Text="загрузка данных..." Margin="5" x:Name="_text"/>
